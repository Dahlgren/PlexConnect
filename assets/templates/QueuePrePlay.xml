<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>

  <body>
    <itemDetail id="com.apple.trailers">
    <title>{{VAL(Video/title)}}</title>
    <subtitle>{{VAL(Video/sourceTitle)}}</subtitle>
    <summary>{{VAL(Video/summary)}}</summary>
    <image style="sixteenByNinePoster">http://node.plexapp.com:32400{{VAL(Video/thumb)}}</image>
    <defaultImage>resource://Poster.png</defaultImage>

    <centerShelf>
        <shelf id="centerShelf" columnCount="4" center="true">
      <sections>
        <shelfSection>
          <items>
            <actionButton id="play" onSelect="atv.loadURL('{{URL(:/queue)}}?url=http://node.plexapp.com:32400{{VAL(Video/Media/Part/key)}}&amp;PlexConnect=QueuePlay')">
              <title>{{TEXT(Play)}}</title>
              <image>resource://Play.png</image>
              <focusedImage>resource://PlayFocused.png</focusedImage>
            </actionButton>
          </items>
        </shelfSection>
      </sections>
    </shelf>
    </centerShelf>
    </itemDetail>
  </body>
</atv>
